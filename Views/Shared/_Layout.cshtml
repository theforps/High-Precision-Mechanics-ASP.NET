<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ООО "ВЫСОКОТОЧНАЯ МЕХАНИКА"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mystyles.css" />
</head>
<body>
    <div class="main">
        <h1 class="title">ООО "ВЫСОКОТОЧНАЯ МЕХАНИКА"</h1>


        <a asp-area="Home" asp-action="CreateOrder" class="btn buttonBasic">Оформить новый заказ</a>
        <a asp-area="Home" asp-action="ShowOrders" class="btn buttonBasic">Все заказы</a>
        <a asp-area="Home" asp-action="Index" class="btn buttonMain text-white">Личный кабинет</a>

    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
